<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.pap.queropizza3.activities.EntregaActivity"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="txtvNome"
        android:id="@+id/txtvNome"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgView"
        android:layout_toEndOf="@+id/imgView"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtvInfo1"
        android:id="@+id/txtvInfo1"
        android:layout_below="@+id/txtvNome"
        android:layout_alignLeft="@+id/txtvNome"
        android:layout_alignStart="@+id/txtvNome"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imgView"
        android:src="@drawable/ic_info"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter" />


</RelativeLayout>

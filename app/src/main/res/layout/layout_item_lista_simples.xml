<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp">

    <TextView
        android:padding="1dip"
        android:textStyle="bold"
        android:id="@+id/txtvQuant"
        android:text="0"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:padding="1dip"
        android:textStyle="bold"
        android:id="@+id/txtvItem"
        android:text="Descrição item"
        android:layout_marginLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtvQuant" />

    <TextView
        android:padding="1dip"
        android:id="@+id/txtvValor"
        android:text="Valor item"
        android:layout_marginLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvItem"
        android:layout_toEndOf="@+id/txtvQuant" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:id="@+id/btnMenos"
        android:onClick="clkBtnMenos"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnMais" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:id="@+id/btnMais"
        android:onClick="clkBtnMais"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
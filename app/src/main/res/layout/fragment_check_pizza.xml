<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pap.queropizza3.activities.CheckActivity$CheckPizzaFragment">

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstvCheckoutPizza"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:groupIndicator="@drawable/expandable_selector"
        android:layout_above="@+id/btnAdicionarItens" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar itens"
        android:id="@+id/btnAdicionarItens"
        android:onClick="btnAdicionarItensClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>